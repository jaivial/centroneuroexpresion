---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import CallToAction from "../components/CallToAction.astro";
import Dropdown from "../components/Dropdown.astro";

const serviciosNinos = [
  {
    title: "Sesiones de estimulación cognitiva",
    description: "Sesiones individuales o en pequeños grupos diseñadas para estimular el desarrollo cognitivo a través de actividades lúdicas y estructuradas.",
    icon: "brain",
    subsections: [
      {
        title: "Sesión 1: Rompecabezas temáticos",
        content: "Actividad de ensamblaje de rompecabezas de 15 piezas con imágenes temáticas y texturas. Los niños observan la imagen, clasifican las piezas y las ensamblan con apoyo. Enfocado en mejorar la planificación y memoria visual.",
      },
      {
        title: "Sesión 2: Clasificando el mundo",
        content: "Ejercicio de clasificación de objetos cotidianos según color, tamaño, uso o material. Se utilizan objetos reales o tarjetas ilustradas. Desarrolla el pensamiento categorial y la flexibilidad mental.",
      },
    ],
  },
  {
    title: "Intervención para niños con discapacidad intelectual",
    description: "Programas personalizados para niños con discapacidad intelectual, centrados en potenciar sus capacidades y mejorar su autonomía.",
    icon: "puzzle",
    subsections: [
      {
        title: "Explorando nuestro conocimiento",
        content: "Sesión para niños de 7-12 años con tres actividades principales:\n\n1. Tablero de imágenes: Ejercicios progresivos de identificación y memoria visual.\n\n2. Patrones de helado: Replicación de secuencias de colores usando plantillas.\n\n3. Problemas matemáticos: Resolución de operaciones básicas usando materiales manipulativos.",
      },
    ],
  },
  {
    title: "Actividades para niños con altas capacidades",
    description: "Programas de enriquecimiento para niños con altas capacidades, diseñados para estimular su potencial y prevenir el aburrimiento o la desmotivación.",
    icon: "lightbulb",
    subsections: [
      {
        title: "Mentes en Acción",
        content: "Programa para niños de 7-10 años con tres componentes:\n\n1. Acertijos y retos: Problemas lógico-matemáticos con debates grupales.\n\n2. Secuencias y patrones: Desafíos para descifrar patrones en palabras, símbolos y números.\n\n3. Solución creativa: Trabajo en equipo para resolver problemas reales con materiales diversos.",
      },
    ],
  },
];

const serviciosFamilias = [
  {
    title: "Cursos de formación para familias",
    description: "Talleres y cursos para familias sobre cómo estimular el desarrollo cognitivo de sus hijos en el hogar.",
    icon: "home",
  },
  {
    title: "Apoyo a familias de niños con discapacidad",
    description: "Grupos de apoyo y asesoramiento individualizado para familias de niños con discapacidad intelectual.",
    icon: "heart",
  },
  {
    title: "Recursos para familias de niños con altas capacidades",
    description: "Materiales y estrategias para familias de niños con altas capacidades, para ayudarles a comprender y apoyar las necesidades de sus hijos.",
    icon: "book",
  },
];

const serviciosEducadores = [
  {
    title: "Desarrollo profesional para educadores",
    description: "Cursos y talleres para educadores sobre cómo implementar estrategias de estimulación cognitiva en el aula.",
    icon: "school",
  },
  {
    title: "Servicios de consulta para educadores",
    description: "Asesoramiento a educadores sobre cómo adaptar el currículo y las actividades para niños con necesidades especiales.",
    icon: "chat",
  },
];

const beneficios = [
  {
    title: "Mejora de la atención y concentración",
    description: "Los niños desarrollan una mayor capacidad para mantener la atención y concentrarse en tareas específicas.",
    icon: "focus",
  },
  {
    title: "Desarrollo del pensamiento lógico",
    description: "Fortalecimiento de las habilidades de razonamiento, resolución de problemas y pensamiento crítico.",
    icon: "logic",
  },
  {
    title: "Estimulación de la memoria",
    description: "Mejora de la memoria a corto y largo plazo, fundamental para el aprendizaje y el desarrollo cognitivo.",
    icon: "memory",
  },
  {
    title: "Potenciación de la creatividad",
    description: "Fomento del pensamiento divergente y la capacidad para generar ideas originales y soluciones innovadoras.",
    icon: "creativity",
  },
];
---

<MainLayout title="Intervención Cognitiva" description="Servicios de intervención cognitiva temprana para niños desde el nacimiento hasta los doce años de edad.">
  <Hero title="Intervención Cognitiva Temprana" subtitle="Potenciando el desarrollo cognitivo, emocional y social de los niños" image="https://images.unsplash.com/photo-1503454537195-1dcabb73ffb9?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&q=80">
    <Button href="/contacto" variant="primary">Programar una Consulta</Button>
  </Hero>

  <!-- Introducción -->
  <section class="py-24 bg-background relative overflow-hidden">
    <div class="absolute -top-24 -left-24 w-96 h-96 bg-pink-300/20 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 -right-48 w-96 h-96 bg-pink-400/20 rounded-full blur-3xl transform -translate-y-1/2"></div>
    <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <img src="https://gabitep.com/wp-content/uploads/2022/02/estimulacion-cognitiva.jpg" alt="Niño en sesión de intervención cognitiva" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
        </div>
        <div class="flex flex-col justify-center">
          <h3 class="mb-4">Importancia de la Intervención Cognitiva</h3>
          <p>La intervención cognitiva es crucial porque el cerebro de los niños se desarrolla rápidamente durante los primeros años de vida. Durante este período, se forman conexiones neuronales que sientan las bases para el aprendizaje futuro. La intervención cognitiva puede:</p>
          <ul class="list-disc pl-6 mt-4 space-y-2">
            <li>Prevenir o minimizar retrasos en el desarrollo</li>
            <li>Reducir la necesidad de servicios especiales en el futuro</li>
            <li>Maximizar el potencial de desarrollo del niño</li>
            <li>Proporcionar apoyo y recursos a las familias</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Servicios para Niños -->
  <section class="py-12 relative overflow-hidden">
    <div class="absolute top-1/4 right-0 w-80 h-80 bg-pink-300/30 rounded-full blur-2xl"></div>
    <div class="absolute bottom-1/4 left-0 w-80 h-80 bg-pink-400/30 rounded-full blur-2xl"></div>
    <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
      <div class="text-center mb-8">
        <h2 class="text-pink-700 font-bold">Servicios para Niños</h2>
        <p class="mt-2 max-w-3xl mx-auto">Ofrecemos una variedad de servicios diseñados específicamente para apoyar el desarrollo cognitivo de los niños, adaptados a sus necesidades individuales y etapa de desarrollo.</p>
      </div>

      <div class="grid grid-cols-1 gap-6">
        {
          serviciosNinos.map((servicio) => (
            <div class="bg-white rounded-lg p-6 shadow-sm">
              <Card title={servicio.title} icon={servicio.icon}>
                <p class="mb-6">{servicio.description}</p>
                {servicio.subsections &&
                  servicio.subsections.map((subsection) => (
                    <Dropdown title={subsection.title} icon={servicio.icon}>
                      <div class="prose prose-pink max-w-none">
                        <p class="text-gray-600 whitespace-pre-line">{subsection.content}</p>
                      </div>
                    </Dropdown>
                  ))}
              </Card>
            </div>
          ))
        }
      </div>

      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <img src="https://ortoprono.es/wp-content/uploads/2021/01/dina%CC%81micas-para-nin%CC%83os-con-discapacidad-fi%CC%81sica.png" alt="Niños en actividades de estimulación cognitiva" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
        <img src="https://crianzaconectada.com/wp-content/uploads/2022/09/Caracteri%CC%81sticas-de-los-Nin%CC%83os-con-Alta-Capacidad-Decomadreo-con-Roci%CC%81o-Yllas-1170x650.jpg" alt="Niño desarrollando habilidades cognitivas" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
      </div>
    </div>
  </section>

  <!-- Servicios para Familias -->
  <section class="py-12 relative overflow-hidden">
    <div class="absolute top-1/4 left-0 w-80 h-80 bg-pink-300/30 rounded-full blur-2xl"></div>
    <div class="absolute bottom-1/4 right-0 w-80 h-80 bg-pink-400/30 rounded-full blur-2xl"></div>
    <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
      <div class="text-center mb-8">
        <h2 class="text-pink-700 font-bold">Servicios para Familias</h2>
        <p class="mt-2 max-w-3xl mx-auto">Ofrecemos apoyo y recursos para las familias, ayudándoles a comprender y fomentar el desarrollo cognitivo de sus hijos en el hogar.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          serviciosFamilias.map((servicio) => (
            <Card title={servicio.title} icon={servicio.icon}>
              <p>{servicio.description}</p>
            </Card>
          ))
        }
      </div>

      <div class="mt-8">
        <img src="https://www.redcenit.com/redcenit///wp-content/uploads/2014/02/servicios-face.jpg" alt="Familia participando en actividades de desarrollo" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
      </div>
    </div>
  </section>

  <!-- Servicios para Educadores -->
  <section class="py-12 relative overflow-hidden">
    <div class="absolute top-1/4 right-0 w-80 h-80 bg-pink-300/30 rounded-full blur-2xl"></div>
    <div class="absolute bottom-1/4 left-0 w-80 h-80 bg-pink-400/30 rounded-full blur-2xl"></div>
    <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
      <div class="text-center mb-8">
        <h2 class="text-pink-700 font-bold">Servicios para Educadores</h2>
        <p class="mt-2 max-w-3xl mx-auto">Proporcionamos formación y recursos para educadores, ayudándoles a implementar estrategias efectivas para el desarrollo cognitivo en el aula.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          serviciosEducadores.map((servicio) => (
            <Card title={servicio.title} icon={servicio.icon}>
              <p>{servicio.description}</p>
            </Card>
          ))
        }
      </div>

      <div class="mt-8 grid grid-cols-1 md:grid-cols-1 gap-6">
        <img src="https://www.aytosalamanca.es/documents/20119/65715/ae481c71cf0b0b6f3cbd665fbfe25ec0.jpg/9dc12f6f-663a-ab05-543b-9e9bd3562396?version=1.0&t=1716960367750" alt="Educadores en formación" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
      </div>
    </div>
  </section>

  <!-- Beneficios -->
  <section class="py-12 relative overflow-hidden">
    <div class="absolute top-1/4 left-0 w-80 h-80 bg-pink-300/30 rounded-full blur-2xl"></div>
    <div class="absolute bottom-1/4 right-0 w-80 h-80 bg-pink-400/30 rounded-full blur-2xl"></div>
    <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
      <div class="text-center mb-8">
        <h2 class="text-pink-700 font-bold">Beneficios de la Intervención Cognitiva Temprana</h2>
        <p class="mt-2 max-w-3xl mx-auto">La intervención cognitiva temprana ofrece numerosos beneficios para el desarrollo integral del niño, sentando las bases para un aprendizaje efectivo a lo largo de su vida.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          beneficios.map((beneficio) => (
            <Card title={beneficio.title} icon={beneficio.icon}>
              <p>{beneficio.description}</p>
            </Card>
          ))
        }
      </div>

      <div class="mt-8">
        <img src="https://images.unsplash.com/photo-1484820540004-14229fe36ca4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&q=80" alt="Niños desarrollando habilidades cognitivas" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
      </div>
    </div>
  </section>

  <!-- Llamada a la acción -->
  <CallToAction title="¿Listo para potenciar el desarrollo cognitivo de tu hijo?" description="Nuestro equipo de especialistas está disponible para evaluar las necesidades de tu hijo y diseñar un plan de intervención personalizado." buttonText="Contáctanos" buttonLink="/contacto" />
</MainLayout>
