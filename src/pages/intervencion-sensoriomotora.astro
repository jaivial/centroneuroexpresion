---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import CallToAction from "../components/CallToAction.astro";

const serviciosNinos = [
  {
    title: "Estimulación Sensoriomotora para Niños Menores de 12 Años",
    description: "Nuestro programa incluye juegos de estimulación táctil, ejercicios visuales y auditivos, terapia de movimiento y equilibrio, y juegos de propiocepción con objetos pesados.",
    icon: "sensory",
  },
  {
    title: "Intervención para Niños con Diversidad Funcional",
    description: "Programas especializados para niños con déficits motores, auditivos o visuales, con evaluación exhaustiva, planes personalizados y seguimiento continuo.",
    icon: "diversity",
  },
];

const serviciosFamilias = [
  {
    title: "Escuela Familiar - Estimulación Sensoriomotora en el Hogar",
    description: "Sesiones de formación para que las familias apliquen estrategias de estimulación sensorial en casa, con talleres dirigidos por profesionales y materiales para usar en el hogar.",
    icon: "home",
  },
  {
    title: "Orientación para Familias de Niños con Diversidad Funcional",
    description: "Servicios de psicoeducación que proporcionan herramientas y apoyo emocional para las familias, incluyendo estrategias para promover la autonomía y grupos de apoyo.",
    icon: "support",
  },
];

const serviciosEducadores = [
  {
    title: "Evaluación Sensoriomotora de Estudiantes",
    description: "Servicios de detección utilizando el Inventario de Desarrollo Battelle para evaluar control muscular, coordinación, locomoción y habilidades motoras finas.",
    icon: "evaluation",
  },
  {
    title: "Orientación para Maestros sobre Diversidad Funcional",
    description: "Apoyo integral para educadores que trabajan con niños con necesidades especiales, incluyendo formación, materiales didácticos y apoyo para implementación en el aula.",
    icon: "teaching",
  },
];

const beneficios = [
  {
    title: "Desarrollo Físico",
    description: "Mejora de la coordinación motora, fortalecimiento muscular, desarrollo del equilibrio y perfeccionamiento de habilidades motoras finas.",
    icon: "physical",
  },
  {
    title: "Desarrollo Cognitivo",
    description: "Mejora de la atención y concentración, desarrollo de habilidades de resolución de problemas, mejor procesamiento sensorial y aumento de la conciencia espacial.",
    icon: "cognitive",
  },
  {
    title: "Desarrollo Emocional y Social",
    description: "Mayor confianza y autoestima, mejora de la autorregulación emocional, desarrollo de habilidades sociales y reducción de la frustración y ansiedad.",
    icon: "emotional",
  },
];
---

<MainLayout title="Intervención Sensoriomotora" description="Servicios de intervención sensoriomotora temprana para niños con dificultades en el procesamiento sensorial y el desarrollo motor.">
  <Hero title="Intervención Sensoriomotora Temprana" subtitle="Enfoque terapéutico para bebés y niños con dificultades en el procesamiento sensorial y el desarrollo motor" image="https://iccsi.com.ar/wp-content/uploads/que-actividades-se-realizan-en-la-etapa-de-operaciones-formales-scaled.webp">
    <Button href="/contacto" variant="primary">Programar una Consulta</Button>
  </Hero>

  <!-- Introducción -->
  <section class="py-12 bg-background relative overflow-hidden">
    <div class="absolute -top-24 -left-24 w-96 h-96 bg-pink-300/20 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 -right-48 w-96 h-96 bg-pink-400/20 rounded-full blur-3xl transform -translate-y-1/2"></div>
    <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <img src="https://images.unsplash.com/photo-1471286174890-9c112ffca5b4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=600&q=80" alt="Niño en sesión de intervención sensoriomotora" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
        </div>
        <div class="flex flex-col justify-center">
          <h3 class="mb-4">Importancia de la Intervención Temprana Sensoriomotora</h3>
          <p>La intervención sensoriomotora temprana es crucial porque:</p>
          <ul class="list-disc pl-6 mt-4 space-y-2">
            <li>El desarrollo sensorial y motor forma la base para habilidades cognitivas y sociales más complejas</li>
            <li>Las dificultades sensoriales no tratadas pueden afectar el aprendizaje, el comportamiento y la participación social</li>
            <li>La intervención temprana aprovecha la plasticidad cerebral para lograr mejores resultados</li>
            <li>Proporciona a las familias estrategias para apoyar el desarrollo de sus hijos en la vida diaria</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Servicios para Niños -->
  <section class="py-12 relative overflow-hidden">
    <div class="absolute top-1/4 right-0 w-80 h-80 bg-pink-300/30 rounded-full blur-2xl"></div>
    <div class="absolute bottom-1/4 left-0 w-80 h-80 bg-pink-400/30 rounded-full blur-2xl"></div>
    <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
      <div class="text-center mb-8">
        <h2 class="text-pink-700 font-bold">Servicios para Niños</h2>
        <p class="mt-2 max-w-3xl mx-auto">Ofrecemos una variedad de servicios diseñados específicamente para apoyar el desarrollo sensoriomotor de los niños, adaptados a sus necesidades individuales y etapa de desarrollo.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          serviciosNinos.map((servicio) => (
            <Card title={servicio.title} icon={servicio.icon}>
              <p>{servicio.description}</p>
            </Card>
          ))
        }
      </div>

      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <img src="https://www.ecoprana.com.pe/wp-content/uploads/2020/05/Blog-estimulacion-1024x683.jpg" alt="Niños en actividades de estimulación sensoriomotora" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
        <img src="https://www.personalum.com/wp-content/uploads/servicio-estimulacion-sensorial-personalum.jpg" alt="Niño en terapia sensoriomotora" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
      </div>
    </div>
  </section>

  <!-- Servicios para Familias -->
  <section class="py-12 bg-background">
    <div class="max-w-7xl mx-auto px-4 md:px-6">
      <div class="text-center mb-8">
        <h2 class="text-pink-700 font-bold">Servicios para Familias</h2>
        <p class="mt-2 max-w-3xl mx-auto">Reconocemos el papel fundamental de la familia en el desarrollo sensoriomotor del niño. Por eso, ofrecemos servicios diseñados para empoderar a las familias con conocimientos, habilidades y recursos.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          serviciosFamilias.map((servicio) => (
            <Card title={servicio.title} icon={servicio.icon}>
              <p>{servicio.description}</p>
            </Card>
          ))
        }
      </div>

      <div class="mt-8">
        <img src="https://www.fisioterapia-online.com/sites/default/files/x3_8.png.pagespeed.ic.zdcYz0Cwxi.jpg" alt="Familia participando en actividades de desarrollo" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
      </div>
    </div>
  </section>

  <!-- Servicios para Educadores -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 md:px-6">
      <div class="text-center mb-8">
        <h2 class="text-pink-700 font-bold">Servicios para Educadores</h2>
        <p class="mt-2 max-w-3xl mx-auto">Colaboramos con educadores para crear entornos educativos que apoyen el desarrollo sensoriomotor de todos los niños, incluidos aquellos con necesidades especiales.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          serviciosEducadores.map((servicio) => (
            <Card title={servicio.title} icon={servicio.icon}>
              <p>{servicio.description}</p>
            </Card>
          ))
        }
      </div>

      <div class="mt-8 grid grid-cols-1 md:grid-cols-1 gap-6">
        <img src="https://motorba.com.ar/wp-content/uploads/que-es-un-examen-sensoriomotor-1.webp" alt="Educadores en formación" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
      </div>
    </div>
  </section>

  <!-- Beneficios -->
  <section class="py-12 bg-background relative overflow-hidden">
    <div class="absolute top-1/4 left-0 w-80 h-80 bg-pink-300/30 rounded-full blur-2xl"></div>
    <div class="absolute bottom-1/4 right-0 w-80 h-80 bg-pink-400/30 rounded-full blur-2xl"></div>
    <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
      <div class="text-center mb-8">
        <h2 class="text-pink-700 font-bold">Beneficios de la Intervención Sensoriomotora Temprana</h2>
        <p class="mt-2 max-w-3xl mx-auto">La intervención sensoriomotora temprana ofrece numerosos beneficios para el desarrollo integral del niño, sentando las bases para un desarrollo físico, cognitivo y emocional saludable.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          beneficios.map((beneficio) => (
            <Card title={beneficio.title} icon={beneficio.icon}>
              <p>{beneficio.description}</p>
            </Card>
          ))
        }
      </div>

      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <img src="https://leefante.com/wp-content/uploads/2020/07/dfdrgt.jpg" alt="Niño desarrollando habilidades motoras" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
        <img src="https://images.unsplash.com/photo-1502124225665-6282a0146f6a?q=80&w=4140&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Niños en actividades sensoriales" class="rounded-lg shadow-md w-full h-auto object-cover aspect-video" />
      </div>
    </div>
  </section>

  <!-- Llamada a la acción -->
  <CallToAction title="¿Preocupado por el desarrollo sensoriomotor de tu hijo?" description="Nuestro equipo de especialistas está disponible para evaluar las necesidades de tu hijo y diseñar un plan de intervención personalizado." buttonText="Contáctanos" buttonLink="/contacto" />
</MainLayout>
