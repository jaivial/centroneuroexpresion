---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Contact Us" description="Get in touch with Centro de IntervenciÃ³n Temprana to schedule a consultation or learn more about our services.">
  <Hero title="Contact Us" subtitle="We're here to answer your questions and help you get started" image="/images/contact-hero.jpg" />

  <section class="py-2xl bg-background">
    <div class="max-w-7xl mx-auto px-md md:px-lg">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-xl">
        <!-- Contact Form -->
        <div>
          <h2 class="mb-lg">Get in Touch</h2>
          <form class="space-y-md">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-md">
              <div>
                <label for="firstName" class="block mb-sm font-bold">First Name</label>
                <input type="text" id="firstName" name="firstName" class="input-field" required />
              </div>
              <div>
                <label for="lastName" class="block mb-sm font-bold">Last Name</label>
                <input type="text" id="lastName" name="lastName" class="input-field" required />
              </div>
            </div>

            <div>
              <label for="email" class="block mb-sm font-bold">Email</label>
              <input type="email" id="email" name="email" class="input-field" required />
            </div>

            <div>
              <label for="phone" class="block mb-sm font-bold">Phone</label>
              <input type="tel" id="phone" name="phone" class="input-field" required />
            </div>

            <div>
              <label for="childAge" class="block mb-sm font-bold">Child's Age</label>
              <select id="childAge" name="childAge" class="input-field" required>
                <option value="" disabled selected>Select age range</option>
                <option value="0-12 months">0-12 months</option>
                <option value="1-2 years">1-2 years</option>
                <option value="2-3 years">2-3 years</option>
                <option value="3-4 years">3-4 years</option>
                <option value="4-5 years">4-5 years</option>
                <option value="5-6 years">5-6 years</option>
              </select>
            </div>

            <div>
              <label for="service" class="block mb-sm font-bold">Service of Interest</label>
              <select id="service" name="service" class="input-field" required>
                <option value="" disabled selected>Select a service</option>
                <option value="Speech Therapy">Speech Therapy</option>
                <option value="Occupational Therapy">Occupational Therapy</option>
                <option value="Physical Therapy">Physical Therapy</option>
                <option value="Developmental Assessment">Developmental Assessment</option>
                <option value="Multiple Services">Multiple Services</option>
                <option value="Not Sure">Not Sure</option>
              </select>
            </div>

            <div>
              <label for="message" class="block mb-sm font-bold">Message</label>
              <textarea id="message" name="message" rows="4" class="input-field" required></textarea>
            </div>

            <div>
              <Button type="submit" variant="primary">Send Message</Button>
            </div>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="bg-primary/10 p-xl rounded-card">
          <h2 class="mb-lg">Contact Information</h2>

          <div class="space-y-lg">
            <div class="flex items-start">
              <div class="bg-primary text-white p-sm rounded-full mr-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold mb-xs">Address</h3>
                <p>123 Intervention Street</p>
                <p>City, Country</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-primary text-white p-sm rounded-full mr-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold mb-xs">Phone</h3>
                <p>(123) 456-7890</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-primary text-white p-sm rounded-full mr-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold mb-xs">Email</h3>
                <p>info@centrointervencion.com</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-primary text-white p-sm rounded-full mr-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold mb-xs">Hours</h3>
                <p>Monday - Friday: 8:00 AM - 6:00 PM</p>
                <p>Saturday: 9:00 AM - 1:00 PM</p>
                <p>Sunday: Closed</p>
              </div>
            </div>
          </div>

          <div class="mt-xl">
            <h3 class="text-lg font-bold mb-md">Follow Us</h3>
            <div class="flex space-x-md">
              <a href="#" aria-label="Facebook" class="text-primary hover:text-primary/80 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"></path>
                </svg>
              </a>
              <a href="#" aria-label="Instagram" class="text-primary hover:text-primary/80 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                  ></path>
                </svg>
              </a>
              <a href="#" aria-label="Twitter" class="text-primary hover:text-primary/80 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-2xl bg-white">
    <div class="max-w-7xl mx-auto px-md md:px-lg">
      <div class="text-center mb-xl">
        <h2>Find Us</h2>
        <p class="mt-sm max-w-2xl mx-auto">We're conveniently located in the heart of the city</p>
      </div>

      <div class="aspect-video rounded-card overflow-hidden shadow-card">
        <!-- Replace with actual map embed code -->
        <div class="w-full h-full bg-light-gray flex items-center justify-center">
          <p class="text-medium-gray">Map Embed Placeholder</p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

