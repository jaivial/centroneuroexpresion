---
import Button from "./Button.astro";

const { title, description, buttonText, buttonLink, class: className } = Astro.props;
---

<div class="max-w-[900px] mx-auto px-4 md:px-6 my-16">
  <section class={`bg-gradient-to-r from-primary to-accent py-16 md:py-20 rounded-lg relative overflow-hidden ${className || ""}`}>
    <!-- Decorative Circles -->
    <div class="absolute inset-0 overflow-hidden">
      <!-- Large circles -->
      <div class="absolute w-96 h-96 rounded-full bg-pink-300/40 blur-3xl -top-32 -left-32 animate-pulse"></div>
      <div class="absolute w-[500px] h-[500px] rounded-full bg-pink-200/30 blur-3xl -bottom-48 -right-48 animate-pulse [animation-delay:2s]"></div>

      <!-- Medium circles -->
      <div class="absolute w-72 h-72 rounded-full bg-pink-400/40 blur-2xl top-1/3 left-1/4 animate-pulse [animation-delay:4s]"></div>
      <div class="absolute w-64 h-64 rounded-full bg-pink-300/40 blur-2xl bottom-1/4 right-1/3 animate-pulse [animation-delay:1s]"></div>

      <!-- Small circles -->
      <div class="absolute w-48 h-48 rounded-full bg-pink-200/50 blur-xl top-1/4 right-1/4 animate-pulse [animation-delay:3s]"></div>
      <div class="absolute w-32 h-32 rounded-full bg-pink-400/40 blur-xl bottom-1/3 left-1/3 animate-pulse [animation-delay:2.5s]"></div>

      <!-- Accent circles -->
      <div class="absolute w-24 h-24 rounded-full bg-pink-300/60 blur-lg top-1/2 right-1/2 animate-pulse [animation-delay:1.5s]"></div>
      <div class="absolute w-40 h-40 rounded-full bg-pink-400/50 blur-xl top-2/3 right-1/6 animate-pulse [animation-delay:3.5s]"></div>
    </div>
    <slot />
    <div class="absolute inset-0 bg-black/10 z-0"></div>
    <div class="max-w-3xl mx-auto px-4 md:px-6 text-center relative z-10">
      <h2 class="text-white mb-6 text-3xl md:text-4xl font-bold leading-tight drop-shadow-md">{title}</h2>
      <p class="text-white max-w-2xl mx-auto mb-8 text-base md:text-lg leading-relaxed px-4 drop-shadow-md font-medium">{description}</p>
      <Button href={buttonLink} variant="secondary" class="inline-block text-lg py-4 px-8 font-bold">{buttonText}</Button>
    </div>
  </section>
</div>
