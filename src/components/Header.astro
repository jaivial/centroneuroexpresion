---
// Header component with mobile menu and dropdown
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 md:px-6">
    <div class="flex justify-between items-center pt-4 md:pb-4">
      <!-- Logo -->
      <a href="/" class="flex items-center my-auto justify-center">
        <img src="/logobueno.svg" alt="Centro de Intervención Temprana" class="h-20" onerror="this.onerror=null; this.src='https://via.placeholder.com/150x50/FF9EBB/FFFFFF?text=Centro'; this.classList.add('rounded-lg');" />
        <span class="text-text font-bold text-xl">Centro NeuroExpresión</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-6 items-center">
        <a href="/" class="font-heading font-bold text-text hover:text-primary transition-colors">Inicio</a>
        <a href="/nosotros" class="font-heading font-bold text-text hover:text-primary transition-colors">Nosotros</a>

        <!-- Services Dropdown -->
        <div class="relative group">
          <button class="font-heading font-bold text-text hover:text-primary transition-colors flex items-center gap-1">
            Servicios
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 mt-1 group-hover:rotate-180 transition-transform duration-300 ease-in-out">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
            </svg>
          </button>
          <div class="absolute left-0 mt-2 w-60 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 ease-in-out transform origin-top-left scale-95 group-hover:scale-100 -translate-y-2 group-hover:translate-y-0 z-50">
            <div class="py-2 px-3 border-b border-light-gray">
              <a href="/servicios" class="block py-2 px-3 text-text hover:text-primary hover:bg-light-gray rounded-md transition-all duration-200 hover:translate-x-1">Todos los Servicios</a>
            </div>
            <div class="py-2 px-3">
              <a href="/intervencion-cognitiva" class="block py-2 px-3 text-text hover:text-primary hover:bg-light-gray rounded-md transition-all duration-200 hover:translate-x-1">Intervención Cognitiva</a>
              <a href="/intervencion-linguistica" class="block py-2 px-3 text-text hover:text-primary hover:bg-light-gray rounded-md transition-all duration-200 hover:translate-x-1">Intervención Lingüística</a>
              <a href="/intervencion-prenatal" class="block py-2 px-3 text-text hover:text-primary hover:bg-light-gray rounded-md transition-all duration-200 hover:translate-x-1">Intervención Prenatal</a>
              <a href="/intervencion-sensoriomotora" class="block py-2 px-3 text-text hover:text-primary hover:bg-light-gray rounded-md transition-all duration-200 hover:translate-x-1">Intervención Sensoriomotora</a>
            </div>
          </div>
        </div>

        <a href="/contacto" class="btn-primary">Contacto</a>
      </nav>

      <!-- Mobile Menu Button -->
      <button id="menu-toggle" class="md:hidden text-text" aria-label="Toggle Menu">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden transform transition-all duration-300 ease-in-out max-h-0 opacity-0 overflow-hidden pb-3">
      <nav class="flex flex-col space-y-4 px-4">
        <a href="/" class="font-heading font-bold text-text hover:text-primary transition-colors py-2">Inicio</a>
        <a href="/nosotros" class="font-heading font-bold text-text hover:text-primary transition-colors py-2">Nosotros</a>

        <!-- Mobile Services Dropdown -->
        <div class="relative">
          <button id="mobile-services-toggle" class="font-heading font-bold text-text hover:text-primary transition-colors flex items-center justify-between w-full py-2">
            Servicios
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 transition-transform duration-300 ease-in-out" id="mobile-services-icon">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
            </svg>
          </button>
          <div id="mobile-services-menu" class="transform transition-all duration-300 ease-in-out max-h-0 opacity-0 overflow-hidden">
            <div class="bg-light-gray rounded-lg">
              <a href="/servicios" class="block py-3 px-4 text-text hover:text-primary transition-all duration-200 hover:pl-6 border-b border-white/20">Todos los Servicios</a>
              <a href="/intervencion-cognitiva" class="block py-3 px-4 text-text hover:text-primary transition-all duration-200 hover:pl-6 border-b border-white/20">Intervención Cognitiva</a>
              <a href="/intervencion-linguistica" class="block py-3 px-4 text-text hover:text-primary transition-all duration-200 hover:pl-6 border-b border-white/20">Intervención Lingüística</a>
              <a href="/intervencion-prenatal" class="block py-3 px-4 text-text hover:text-primary transition-all duration-200 hover:pl-6 border-b border-white/20">Intervención Prenatal</a>
              <a href="/intervencion-sensoriomotora" class="block py-3 px-4 text-text hover:text-primary transition-all duration-200 hover:pl-6">Intervención Sensoriomotora</a>
            </div>
          </div>
        </div>

        <a href="/contacto" class="btn-primary text-center py-3">Contacto</a>
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileServicesToggle = document.getElementById("mobile-services-toggle");
    const mobileServicesMenu = document.getElementById("mobile-services-menu");
    const mobileServicesIcon = document.getElementById("mobile-services-icon");

    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener("click", () => {
        if (mobileMenu.classList.contains("max-h-0")) {
          mobileMenu.classList.remove("max-h-0", "opacity-0");
          mobileMenu.classList.add("max-h-[800px]", "opacity-100");
        } else {
          mobileMenu.classList.remove("max-h-[800px]", "opacity-100");
          mobileMenu.classList.add("max-h-0", "opacity-0");
        }
      });
    }

    if (mobileServicesToggle && mobileServicesMenu && mobileServicesIcon) {
      mobileServicesToggle.addEventListener("click", () => {
        mobileServicesIcon.classList.toggle("rotate-180");
        if (mobileServicesMenu.classList.contains("max-h-0")) {
          mobileServicesMenu.classList.remove("max-h-0", "opacity-0");
          mobileServicesMenu.classList.add("max-h-[400px]", "opacity-100");
        } else {
          mobileServicesMenu.classList.remove("max-h-[400px]", "opacity-100");
          mobileServicesMenu.classList.add("max-h-0", "opacity-0");
        }
      });
    }
  });
</script>
